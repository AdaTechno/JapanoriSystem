@model JapanoriSystem.Models.Comanda

@{
    ViewBag.Title = "Criar";
}

<div class="barra">

    <div class="barra-fundo">

        <ul class="nav navbar-nav">
            <li><img style="margin-top: 5px; width: 40px; height: 40px;" src="~/Source/add-64.png" /></li>
            <li><h3 style="position:absolute;width:300px;margin-top:12px;">Nova Comanda</h3></li>
        </ul>

    </div>

</div>
<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="margin-left:auto;margin-right:auto;">
        <hr />
        @ViewBag.Message

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBox("comandaID", "", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
            </div>
        </div>

        @if (ViewBag.ConfErro != null && ViewBag.Success == null)
        {
            @ViewBag.Erro
        }
        @if (ViewBag.Success != null)
        {
            @ViewBag.Success
        }
        <br />
        <br />
        <div class="form-actions">
            <input type="submit" value="Criar" class="btn btn-success" /> | 
            @Html.ActionLink("Voltar para lista", "Index", "", htmlAttributes: new { @class = "btn btn-default" })

        </div>
    </div>
}