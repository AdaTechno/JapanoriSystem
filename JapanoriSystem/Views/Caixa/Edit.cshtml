        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Save" class="btn btn-default" onclick="PcUpdate()"/>
            </div>
        </div>
    </div>

<div>
    @Html.ActionLink("Back to List", "Caixa")
</div>

@section Scripts{
    <script type="text/javascript">
        function PcUpdate() {
            var ProdutoComandaID = $("#ProdutoComandaID").val();
            var ComandaID = $("#ComandaID").val();
            var ProdutoID = $("#ProdutoID").val();

            var update = {
                "ProdutoComandaID": ProdutoComandaID,
                "ComandaID": ComandaID,
                "ProdutoID": ProdutoID
            }
            $.post('/Caixa/Edit', update, function (data) {
                if (data == 0) {
                    location: location.href;
                }
            }, 'json');
            alert("Atualizado com sucesso na comanda " + ComandaID);
        };
    </script>
}